@{
    ViewBag.Title = "Listado de Distritos";
}

<h2 class="text-center"><u>Listado de Distritos</u></h2>

<p>
    @Html.ActionLink("Nuevo Distrito", "Create",null,new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
