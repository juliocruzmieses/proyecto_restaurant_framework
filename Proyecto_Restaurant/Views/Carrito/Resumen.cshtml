            <td><a href="#" class="btn btn-primary">edit</a></td>
        </tr>
        <tr>
            <td>gaseosa</td>
            <td>3</td>
            <td>33</td>
            <td><a href="#" class="btn btn-primary">edit</a></td>
        </tr>
        <tr>
            <td>chaufa</td>
            <td>2</td>
            <td>45</td>
            <td><a href="#" class="btn btn-primary">edit</a></td>
        </tr>
    </tbody>
</table>

<script>
    document.getElementById('btnagregar').addEventListener('click', function () {
        let numboleta = document.getElementById('numboleta').value;
        let nummesa = document.getElementById('nummesa').options.selectedIndex + 1;
        let product = document.getElementById('product').options.selectedIndex;
        let cant = document.getElementById('cant').value;

        fetch("@Url.Content("~/Carrito/ResumenPedido?idmesa=")" + nummesa)
            .then(function (res) {
                return res.json();
