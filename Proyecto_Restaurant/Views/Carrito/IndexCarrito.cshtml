@model IEnumerable<Proyecto_Restaurant.Models.MesaModel>
@{
    ViewBag.Title = "Seleccionar Mesa";
}
<h2 class="text-center">@ViewBag.Title</h2>

@*<a href="#" class="btn btn-primary">Nuevo Pedido</a>*@

<div class="d-flex flex-wrap">
    @foreach (var item in Model)
    {
        <a href="@Url.Action("Valida_Pedido","Carrito")?idmesa=@item.idMesa">
            <div class="card text-white bg-primary m-3" style="max-width: 18rem;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-text text-white">@item.descMesa</h5>
                    <i class="fa fa-cutlery text-center display-4" aria-hidden="true"></i>
                </div>
            </div>
        </a>
    }
</div>

