@model Proyecto_Restaurant.Models.UsuarioModel

@{
    ViewBag.Title = "Actualizacion de datos";
}
@if (ViewBag.mensaje != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Exito</strong> @ViewBag.mensaje
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<h2 class="text-center"><u>Actualizacion de Datos</u></h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-row">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.nom_usuario, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.nom_usuario, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nom_usuario, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.ape_usuario, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.ape_usuario, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ape_usuario, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.username, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.fono_user, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.fono_user, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.fono_user, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.id_rol, htmlAttributes: new { @class = "control-label" })
            @*@Html.EditorFor(model => model.nom_rol, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.DropDownListFor(model => model.id_rol, (SelectList)ViewBag.roles, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.id_rol, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.id_distrito, htmlAttributes: new { @class = "control-label" })
            @*@Html.EditorFor(model => model.id_distrito, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.DropDownListFor(model => model.id_distrito, (SelectList)ViewBag.distritos, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.id_distrito, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.estado, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.estado, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
        </div>
        <div class="form-group invisible position-absolute">
            @Html.EditorFor(model => model.id_usuario, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </div>
        <div class="form-group col-md-12">
            <input type="submit" value="Actualizar" class="btn btn-primary" />
        </div>
    </div>
}
<div>
    @Html.ActionLink("Regresar", "ListadoUsuarios", null, new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}